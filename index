<script>
    const form = document.querySelector('form');
    form.addEventListener('submit', function(event) {
        event.preventDefault();

        const boleta = document.getElementById('boleta').value;
        const productos = document.getElementById('productos').value;
        const cantidad = document.getElementById('cantidad').value;
        const precio = document.getElementById('precio').value;
        const rut = document.getElementById('rut').value;
        const nombre = document.getElementById('nombre').value;

        // Validar que todos los campos estén completos
        if (boleta === '' || productos === '' || cantidad === '' || precio === '' || rut === '' || nombre === '') {
            alert('Por favor, complete todos los campos obligatorios.');
            return;
        }

        // Validar que el número de boleta sea único
        // Aquí se realizaría la validación con la base de datos

        // Guardar la información de la venta en la base de datos
        // Aquí se realizaría la lógica para guardar la venta en la base de datos

        // Mostrar mensaje de confirmación
        alert('La venta ha sido registrada exitosamente.');

        // Mostrar el resumen de la venta registrada
        const resumen = `Número de Boleta: ${boleta}\nProductos: ${productos}\nCantidad de Productos: ${cantidad}\nPrecio: ${precio}\nRUT del Cliente: ${rut}\nNombre del Cliente: ${nombre}`;
        alert(resumen);

        // Limpiar los campos del formulario
        form.reset();
    });
</script>

